@model List<Category>

    <div clas="container">
        <div class="row pt-4 pb-3">
            <div class="col-6">
                <h2 class="text-primary">
                    Category List
                </h2> 
            </div>
            <div class="col-6 text-end">
                <a asp-asp-controller="" asp-action="" class="btn btn-primary">
                create new category <i class="bi bi-plus"></i>
                </a>
            </div>
        </div>
    </div>

<table class="table table-bordered table-striped">
    <tr>
        <th>
            Category name
        </th>
        <th>
            Display order
        </th>
    </tr>
    <tbody>
        @foreach(var obj in Model.OrderBy(u=>u.DisplayOrder))
        {
        <tr>
            <td>@obj.Name</td>
            <td>
                @obj.DisplayOrder
            </td>
        </tr>
        }
    </tbody>
</table>